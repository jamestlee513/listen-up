doctype html
html
  head
      block head
        title="Listen Up Express Starter App"
        link(rel='stylesheet' href='/stylesheets/layout.css')
        link(rel='stylesheet' href='/stylesheets/podcast-list.css')
        script(src="/javascripts/formInputs.js" type="module")
        script(src="/javascripts/navbarInputs.js" type="module")
        link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.15.1/css/all.css' integrity='sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp' crossorigin='anonymous')
        link(rel='stylesheet' href='podcast.css')
  body
        if locals.authenticated
          nav(class="navbar_container")
            span(class='') Welcome #{user.firstName}!
            form(class='' action='' method='post')
              button(class='' type='submit') Logout
        else
          section(class="body_container")
            nav(class="navbar_container")
              h1(class="navbar_conatiner-logo-h1")
                span(class="navbar_container-logo-light") Listen
                span(class="navbar_container-logo-bold") up
              form(class="navbar_container-form" action='/users/login' method='POST')
                input(class="navbar_container-form-input" type='hidden' name='_csrf' value=csrfToken)
                label(for="email")
                input(class="navbar_container-form-input" type="email" id="email" name="email" value=email placeholder="Email address")
                label(for="password")
                input(class="navbar_container-form-input" type="password" id="password" name="password" value=password placeholder="Password")
                button(class="navbar_container-form-button" type='submit') Sign in
        block content