doctype html
html
  head
      block head
        if locals.authenticated
          title #{title} - #{user.firstName}
        else
          title Welcome to Listenup

        link(rel='stylesheet' href='/stylesheets/layout.css')
        link(rel='stylesheet' href='/stylesheets/podcast-list.css')
        script(src="/javascripts/formInputs.js" type="module")
        script(src="/javascripts/navbarInputs.js" type="module")
        link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.15.1/css/all.css' integrity='sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp' crossorigin='anonymous')
        link(rel='stylesheet' href='/stylesheets/podcast.css')
        link(rel='stylesheet' href='/stylesheets/login.css')
  body
        if locals.authenticated
         section(class="navbar_main-section")
            nav(class="main_section-container")
              div(class="marco-polo")
                a(class="navbar_conatiner-logo-h1" href="/")
                  span(class="navbar_container-logo-light") Listen
                  span(class="navbar_container-logo-bold") up
                  .links
                    .link
                      a(href="/podcasts") Podcasts
                    .link
                      a(href="/playlists") Playlists
              div(class="navbar_buttons")
                p(class="nav_bar-welcome-text")= `Welcome ${user.firstName}`
                form(action='/users/logout' method='POST')
                  button(class="form_container-logout-btn" type='submit') Logout
        else
          section(class="navbar_main-section")
            nav(class="main_section-container")
              a(class="navbar_conatiner-logo-h1" href="/")
                span(class="navbar_container-logo-light") Listen
                span(class="navbar_container-logo-bold") up
              div(class="navbar_buttons")
                button(class="form_container-demo-button-login")  
                  a(href="/users/login" class="form_container-demo-login-text") Login
                button(class="form_container-demo-button")  
                  a(href="/users/login-demo" class="form_container-demo-login-text") Demo User
        block content